@model IEnumerable<TMSv2.Models.Topic>
@{
	ViewBag.Title = "Index";
}

<h2>Topics</h2>
@using (Html.BeginForm("Index", "Topics", FormMethod.Get))
{
	<p>
		Topic name: @Html.TextBox("Search")
		<input type="submit" value="Search" />
	</p>
}
@Html.ActionLink("Add a new Topic", "Create")

<table class="table table-striped">
	<tr>
		<th>Topic Name</th>
		<th>Description</th>
	</tr>
	@foreach (var topic in Model)
	{
		<tr>
			<th>@topic.Name</th>
			<th>@topic.Description</th>
		</tr>
	}
</table>

